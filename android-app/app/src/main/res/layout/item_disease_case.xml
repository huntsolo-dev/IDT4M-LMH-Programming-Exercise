<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDateRecorded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Recorded"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvClientGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Gender"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvClientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Age"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDiseaseClassification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Classification"
        android:textSize="14sp" />
</LinearLayout>